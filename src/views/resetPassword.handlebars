<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Restablecer Contrase単a</title>
</head>
<body>
  <h2>Restablece tu contrase単a</h2>

  <form id="resetForm">
    <input type="password" id="newPassword" placeholder="Nueva contrase単a" required />
    <button type="submit">Restablecer</button>
  </form>

  <p id="response"></p>

  <script>
    const form = document.getElementById('resetForm');
    const responseMsg = document.getElementById('response');

    const urlParams = new URLSearchParams(window.location.search);
    const token = urlParams.get('token');

    form.addEventListener('submit', async (e) => {
      e.preventDefault(); // Evita el submit por defecto

      const newPassword = document.getElementById('newPassword').value;

      try {
        const response = await fetch('http://localhost:8080/api/auth/reset-password', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ token, newPassword })
        });

        const result = await response.json();
        responseMsg.innerText = result.message;
      } catch (error) {
        responseMsg.innerText = 'Error al restablecer la contrase単a';
      }
    });
  </script>
</body>
</html>
